# Use Go 1.25.5 as the base image
FROM docker.io/library/golang:1.25.5

# Install cross-compilation tools for ARM (32-bit) and ARM64 (64-bit)
RUN apt-get update && apt-get install -y \
    gcc-arm-linux-gnueabihf \
    gcc-aarch64-linux-gnu \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /src

# Default command is to show Go version and available compilers
CMD ["bash", "-c", "go version && arm-linux-gnueabihf-gcc --version && aarch64-linux-gnu-gcc --version"]
