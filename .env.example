# Tailscale Auth Key (Required for headless operation)
TS_AUTHKEY=tskey-auth-xxxxx

# Tailscale API Key (Optional: for auto-provisioning)
TS_API_KEY=tskey-api-xxxxx

# Remote directory for source-based deployment (Remote Build)
REMOTE_DIR_SRC=/home/user1/dialtone_src

# Remote directory for binary-based deployment (Pre-built)
REMOTE_DIR_DEPLOY=/home/user1/dialtone

# Default hostname for the rover dashboard
DIALTONE_HOSTNAME=drone-1

# Dependency directory (Default: ./dialtone_dependencies or ~/.dialtone_env)
DIALTONE_ENV=./dialtone_dependencies
OPENCODE_API_KEY=your-opencode-api-key
